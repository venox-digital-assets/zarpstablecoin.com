import Layout from '../layouts/Layout.astro';
import stats from '../data/stats.json';

// Fetch live data from CoinGecko
let priceData = {
  zar: 1.00,
  marketCap: stats.supply,
  transactions: stats.transactions,
  usd: 0.05,
  reserves: stats.reserves
};

try {
  // Parallel fetch: CoinGecko + Our Transparency Scraper
  const [coingeckoRes, statsRes] = await Promise.all([
    fetch('https://api.coingecko.com/api/v3/simple/price?ids=zarp-stablecoin&vs_currencies=usd,zar&include_market_cap=true&include_24hr_vol=true'),
    fetch('http://localhost:4321/api/stats.json') // Fetch from our own endpoint
  ]);

  const geckoData = await coingeckoRes.json();
  
  // Update from Gecko
  if (geckoData['zarp-stablecoin']) {
    priceData.zar = geckoData['zarp-stablecoin'].zar;
    priceData.volume = geckoData['zarp-stablecoin'].zar_24h_vol;
    priceData.usd = geckoData['zarp-stablecoin'].usd;
    // We prefer our transparency page supply if available, else fallback to gecko
    // priceData.marketCap = geckoData['zarp-stablecoin'].zar_market_cap; 
  }

  // Update from Transparency Page via API (or fallback to build-time stats)
  if (statsRes.ok) {
    const statsData = await statsRes.json();
    if (statsData.supply) priceData.marketCap = statsData.supply;
    if (statsData.reserves) priceData.reserves = statsData.reserves;
    // If our API scraper finds transactions, use them. Otherwise keep the build-time stat.
    if (statsData.transactions) priceData.transactions = statsData.transactions; 
  }
} catch (e) {
  console.error("Failed to fetch price data", e);
}

const zarFormatter = new Intl.NumberFormat('en-ZA', {
  style: 'currency',
  currency: 'ZAR',
  minimumFractionDigits: 0,
  maximumFractionDigits: 0,
});

const usdFormatter = new Intl.NumberFormat('en-US', {
  style: 'currency',
  currency: 'USD',
  minimumFractionDigits: 4,
  maximumFractionDigits: 4,
});

const numberFormatter = new Intl.NumberFormat('en-ZA', {
  style: 'decimal',
  minimumFractionDigits: 0,
  maximumFractionDigits: 0,
});

const logos = [
  { name: 'Base', src: '/img/base.svg', url: 'https://basescan.org/token/0xb755506531786C8aC63B756BaB1ac387bACB0C04' },
  { name: 'Ethereum', src: '/img/ethereum.svg', url: 'https://etherscan.io/token/0xb755506531786C8aC63B756BaB1ac387bACB0C04' },
  { name: 'Gnosis Chain', src: '/img/gnosis.svg', url: 'https://gnosisscan.io/token/0xb755506531786C8aC63B756BaB1ac387bACB0C04' },
  { name: 'Polygon', src: '/img/polygon.svg', url: 'https://polygonscan.com/token/0xb755506531786C8aC63B756BaB1ac387bACB0C04' },
  { name: 'Solana', src: '/img/solana.svg', url: 'https://solscan.io/token/dngKhBQM3BGvsDHKhrLnjvRKfY5Q7gEnYGToj9Lk8rk' },
